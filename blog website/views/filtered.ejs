    <h1>Daily Diarist</h1>
  </div>
  <h2>Search Results</h2>
  <ul>
    <% blogs.forEach(function(blog) { %>
      <li>
        <a href="/blogs/<%= blog._id %>"><%= blog.title %></a>
        <p><%= blog.date.toDateString() %></p>
      </li>
    <% }) %>
  </ul>
  <a href="/">Back to Home</a>
