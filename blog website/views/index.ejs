      </svg>
      <h1>Daily Diarist</h1>
    </div>
    <div class="header-right">
      <a href="/new">Write A Blog</a>
      <form action="/search" method="GET">
        <input type="text" name="query" placeholder="Search blogs by title" required>
        <button type="submit">Search</button>
      </form>
    </div>
  </div>
  <h2>Blogs</h2>
  <ul>
    <% blogs.forEach(function(blog) { %>
      <li>
        <a href="/blogs/<%= blog._id %>"><%= blog.title %></a>
        <p><%= blog.date.toDateString() %></p>
      </li>
    <% }) %>
  </ul>
</body>
</html>
